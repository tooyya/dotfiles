[user]
	name = tooyya

[include]
	path = ~/.gitconfig.local

[core]
	editor = nvim
	excludesfile = ~/.gitignore_global
	autocrlf = input
	ignorecase = false

[init]
	defaultBranch = main

[color]
	ui = auto

[pull]
	rebase = false

[push]
	default = simple
	autoSetupRemote = true

[fetch]
	prune = true

[diff]
	algorithm = histogram

[merge]
	conflictstyle = diff3

[alias]
	st = status
	co = checkout
	br = branch
	ci = commit
	df = diff
	dfc = diff --cached
	l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

[ghq]
	root = ~/src
	user = tooyya
